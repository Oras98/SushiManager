@model OrderDetail

@{
    ViewData["Title"] = "AddItem";
}

<h1>Elimina prodotto</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">            

            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <input asp-for="ProductId" class="form-control" readonly="true" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" readonly="true" />
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Conferma eliminazione" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Torna alla lista</a>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}